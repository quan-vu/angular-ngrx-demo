{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "outDir": "../out-tsc/app",
    "target": "es5",
    "module": "es2015",
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@example-app/*": ["./src/app/*"],
    }
  },
  "exclude": [
    "../../node_modules",
    "**/test.ts",
    "**/*.spec.ts",
    "**/setup-jest.ts"
  ]
}
